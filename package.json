{
  "name": "windows-window-controller",
  "version": "2.2.0",
  "description": "controll window by calling user32.ShowWindow from node via node-ffi",
  "main": "./dist/index.js",
  "bin": {
    "nwwc": "./dist/bin/nwwc.js",
    "show-window": "./dist/bin/show-window.js",
    "hide-window": "./dist/bin/hide-window.js"
  },
  "scripts": {
    "lint": "tslint -e **/*.d.ts -t stylish src/**/*.ts test/**/*.ts",
    "jslint": "eslint --fix dist/**/*.js",
    "test": "npm run lint",
    "prepublishOnly": "npm run build",
    "build": "npm run test && rm -rf dist/* && tsc -p ./ --outDir dist/ && npm run jslint"
  },
  "keywords": [
    "window",
    "windows api",
    "ShowWindow",
    "show window",
    "hide window",
    "maximize window",
    "minimize window",
    "隐藏窗口"
  ],
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "author": "waiting",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/waitingsong/node-windows-window-controller.git"
  },
  "bugs": {
    "url": "https://github.com/waitingsong/node-windows-window-controller/issues"
  },
  "homepage": "https://github.com/waitingsong/node-windows-window-controller#readme",
  "engines": {
    "node": ">=6.5.0"
  },
  "os": [
    "win32"
  ],
  "dependencies": {
    "ffi": "^2.2.0",
    "win32-api": "^1.6.2"
  },
  "devDependencies": {
    "@types/ffi": "^0.0.19",
    "@types/node": "^8.0.25",
    "@types/ref": "^0.0.28",
    "eslint": "^4.8.0",
    "rimraf": "^2.6.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0"
  }
}
